@model Accessories_Store.Models.Entities.CategoryType

@{
    ViewData["Title"] = "Create";
}
@section Styles{
    
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb breadcrumb-style1">
        <li class="breadcrumb-item">
            <a asp-area="admin" asp-controller="home" asp-action="index">Trang chủ</a>
        </li>
        <li class="breadcrumb-item active">Danh sách loại danh mục : trang @ViewBag.CurrentPage</li>
    </ol>
</nav>

<div>
    <form action="/admin/categories/type/add" method="post" enctype="multipart/form-data">
        <div class="d-flex flex-wrap justify-content-between align-items-center mb-3">

            <div class="d-flex flex-column justify-content-center">
                <h4 class="mb-1 mt-3">Thêm loại danh mục mới</h4>

            </div>
            <div class="d-flex align-content-center flex-wrap gap-3">
                <a href="/admin/categories" class="btn btn-secondary">Quay lại</a>
                <button type="submit" class="btn btn-primary">Thêm</button>
            </div>

        </div>
        <div class="row">
            <div class="col-8 col-lg-8">
                <!-- Product Information -->
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="card-tile mb-0">Thông tin loại danh mục</h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label class="form-label" for="ecommerce-product-name">Tên danh mục</label>
                            <input type="text" class="form-control" asp-for="Name" id="ecommerce-product-name" placeholder="Product title" aria-label="Product title">
                        </div>
                        <!-- Description -->
                        <div>
                            <label class="form-label">Mô tả <span class="text-muted">(Bắt buộc)</span></label>
                            <div class="form-control p-0 pt-1">
                                <textarea class="form-control" asp-for="Description" placeholder="Nhập...."></textarea>
                                <span class="text-danger"></span>

                            </div>
                        </div>
                    </div>
                </div>

                <!-- /Product Information -->

            </div>
        </div>

    </form>
</div>
@section Scripts{
   
}