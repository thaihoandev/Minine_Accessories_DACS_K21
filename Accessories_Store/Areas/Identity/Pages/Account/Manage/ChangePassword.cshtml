@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Thay đổi mật khẩu";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="change-password-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <label class="form-label">Mật khẩu hiện tại</label>
                <span asp-validation-for="Input.OldPassword" class="text-danger"></span>
                <input asp-for="Input.OldPassword" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Vui lòng nhập mật khẩu cũ." />
            </div>
            <div class="form-floating mb-3">
                <label asp-for="Input.NewPassword" class="form-label">Mật khẩu mới</label>
                <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
                <input asp-for="Input.NewPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Vui lòng nhập mật khẩu mới." />
            </div>
            <div class="form-floating mb-3">
                <label asp-for="Input.ConfirmPassword" class="form-label">Nhập lại mật khẩu mới</label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Vui lòng nhập lại mật khẩu." />
            </div>
            <button type="submit" class="w-100 btn btn-lg btn-primary">Cập nhật mật khẩu</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
